<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRMS.styles.css" asp-append-version="true" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HRMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">

                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Position
                            </button>

                            <div class="dropdown-menu dropdown-menu-white">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Position" asp-action="Entry">Form</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Position" asp-action="List">List</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">

                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Department
                            </button>

                            <div class="dropdown-menu dropdown-menu-white">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Department" asp-action="Entry">Form</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Department" asp-action="List">List</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">

                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Emplyee
                            </button>

                            <div class="dropdown-menu dropdown-menu-white">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Emplyee" asp-action="Entry">Form</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Emplyee" asp-action="List">List</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">

                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Daily Attendance
                            </button>

                            <div class="dropdown-menu dropdown-menu-white">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="DailyAttendance" asp-action="Entry">Form</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="DailyAttendance" asp-action="List">List</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">

                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Shift
                            </button>

                            <div class="dropdown-menu dropdown-menu-white">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Shift" asp-action="Entry">Form</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Shift" asp-action="List">List</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HRMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

