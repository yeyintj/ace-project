
@model IList<ShiftViewModel>
@TempData["info"]



<div class="container">
    <h1 class="text-center">Position List</h1>
    <table class="table table-striped">
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>In Time</th>
            <th>Out Time</th>
            <th>Late After</th>
            <th>Early Out Before</th>
            <th>Action</th>
        </tr>

        @{
            int index = 1;
        }

        @foreach (var h in Model)
        {
            <tr>
                <td>@index</td>
                <td>@h.Name</td>
                <td>@h.InTime</td>
                <td>@h.OutTime</td>
                <td>@h.LateAfter</td>
                <td>@h.EarlyOutBefore</td>
                <th>
                    <a class="btn btn-info" href="/shift/edit?Id=@h.Id">Edit</a>
                    <a class="btn btn-danger" href="/shift/delete?Id=@h.Id" onclick="return confirm('Are you sure want to delete the record?')">Delete</a>
                </th>
            </tr>
            index++;
        }

    </table>
</div>